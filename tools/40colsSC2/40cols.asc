100 REM { carrega fonte padrao graphos III }
110 BLOAD"amazonia.alf",&H3A00 
120 POKE &HF91F,PEEK(&HF341+3)
130 POKE &HF920,&H0
140 POKE &HF921,&HCC
150 REM { carrega 40 cols SC2 }
160 GOSUB 570
170 REM
180 REM {Serve apenas para centralizar texto na tela}
190 REM
200 DEF FNCX(FS$)=128-3*LEN(FS$)
210 REM
220 REM {Exemplo na SCREEN 2}
230 REM
240 SCREEN 2
250 COLOR 15,12,4
260 CLS
270 COLOR 15
280 FS$="Usando FONTE Amaz"+CHR$(&H93)+"nia"
290 PSET(FNCX(FS$),64),12
300 A$=USR(FS$)
310 COLOR 7
320 FS$="na SCREEN 2"
330 PSET(FNCX(FS$),80),12
340 A$=USR(FS$)
350 COLOR 10
360 FS$="Fonte em CC00h"
370 PSET(FNCX(FS$),96),12
380 A$=USR(FS$)
390 FS$="40 Colunas em E000h"
400 PSET(FNCX(FS$),112),12
410 A$=USR(FS$)
420 COLOR 3
430 FS$="Pressione Espaco"
440 PSET(FNCX(FS$),160),12
450 A$=USR(FS$)
460 FOR I=0TO1
470   I=-STRIG(0)
480 NEXT
490 REM
500 REM {Volta fonte da ROM}
510 REM
520 POKE &HF91F,PEEK(&HFCC1)
530 POKE &HF920,PEEK(4)
540 POKE &HF921,PEEK(5)
550 SCREEN 0
560 END
570 SCREEN 2
580 BLOAD"40cols.bin"
590 DEFUSR=&HD400
600 PRESET(10,50),POINT(10,10)
610 A$=USR("40 colunas SCREEN 2")
620 PRESET(0,0),POINT(10,10)
630 A$=USR("0         1         2         3         ")
640 PRESET(0,10),POINT(10,10)
650 A$=USR("0123456789012345678901234567890123456789")
660 PRESET (150,180),POINT(150,180):A$=USR("Pressione tecla")
670 A$=INPUT$(1)
680 RETURN
