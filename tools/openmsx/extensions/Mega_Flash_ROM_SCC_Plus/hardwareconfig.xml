<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>
  <info>
    <name>Mega Flash ROM SCC+</name>
    <manufacturer>Manuel Pazos</manufacturer>
    <code/>
    <release_year>2010</release_year>
    <description>MSX Flash cartridge of 1MB with SCC-I and PSG.</description>
    <type>Flash cartridge</type>
  </info>
  <devices>
    <primary slot="any">
      <secondary slot="any">
        <ROM id="MegaFlashRomSCC">
          <mem base="0x0000" size="0x10000"/>
          <sound>
            <volume>9000</volume>
          </sound>
          <rom>
            <!--<filename>initial-content</filename>-->
            <size>1024</size>
          </rom>
          <sramname>megaflashromsccplus.sram</sramname>
          <mappertype>MegaFlashRomSccPlus</mappertype>
        </ROM>
      </secondary>
    </primary>
  </devices>
</msxconfig>
