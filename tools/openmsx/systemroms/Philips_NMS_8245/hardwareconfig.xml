<?xml version="1.0" ?>
<!-- $Id: hardwareconfig.xml 12764 2012-07-29 20:05:49Z manuelbi $ -->
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>Philips</manufacturer>
    <code>NMS 8245</code>
    <release_year>1986</release_year>
    <description/>
    <type>MSX2</type>
  </info>

  <MapperReadBackBits>largest</MapperReadBackBits>

  <CassettePort/>

  <devices>

    <PPI id="ppi">
      <key_ghosting>true</key_ghosting>
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0xA8" num="4"/>
      <keyboard_type>int</keyboard_type>
      <has_keypad>false</has_keypad>
      <key_ghosting_sgc_protected>true</key_ghosting_sgc_protected>
      <code_kana_locks>false</code_kana_locks>
      <graph_locks>false</graph_locks>
    </PPI>

    <VDP id="VDP">
      <version>V9938</version>
      <vram>128</vram>
      <io base="0x98" num="4" type="O"/>
      <io base="0x98" num="2" type="I"/>
    </VDP>

    <PSG id="PSG">
      <type>YM2149</type> <!-- in S-3527 MSX-ENGINE -->
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
    </PSG>

    <RTC id="Real time clock">
      <sramname>nms_8245.cmos</sramname>
      <io base="0xB4" num="2" type="O"/>
      <io base="0xB5" num="1" type="I"/>
    </RTC>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

    <primary slot="0">
      <ROM id="MSX BIOS with BASIC ROM">
        <rom>
          <filename>roms/nms8245_basic-bios2.rom</filename>
          <sha1>6103b39f1e38d1aa2d84b1c3219c44f1abb5436e</sha1> <!-- verified on Manuel's 8245/00 -->
        </rom>
        <mem base="0x0000" size="0x8000"/>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary external="true" slot="2"/>

    <primary slot="3">

      <secondary slot="0">
        <ROM id="MSX Sub ROM">
          <rom>
            <filename>roms/nms8245_msx2sub.rom</filename>
	    <sha1>5c1f9c7fb655e43d38e5dd1fcc6b942b2ff68b02</sha1> <!-- verified by Manuel's 8245/00 -->
            <sha1>e7905d16d2ccd57a013c122dc432106cd59ef52c</sha1>
          </rom>
          <mem base="0x0000" size="0x4000"/> <!-- Note: NO mirroring at all! -->
        </ROM>
      </secondary>

      <secondary slot="1"/>

      <secondary slot="2">
        <MemoryMapper id="Main RAM">
          <size>128</size>
          <initialContent encoding="gz-base64">eNpj+M8wouEI9z4DAJBx/wE=</initialContent>
          <mem base="0x0000" size="0x10000"/>
        </MemoryMapper>
      </secondary>

      <secondary slot="3">
        <WD2793 id="Memory Mapped FDC">
          <connectionstyle>Philips</connectionstyle>
          <mem base="0x4000" size="0x8000"/>
          <!-- Verified on real 8245: rom only visible in page1, FDC registers
               in both page 1 and 2. This is different from a 8250! -->
          <drives>1</drives>
          <rom>
            <filename>roms/nms8245_disk.rom</filename>
	    <sha1>b484c8fa4549b79cff976001ac4beb19abf7cfb5</sha1> <!-- marked NMS 8245 1.06 -->
            <sha1>c3f3ca454d66a0bc791f1d4b60e6857b44eb8755</sha1> <!-- marked NMS 8250 1.08 (?) -->
          </rom>
        </WD2793>
      </secondary>

    </primary>

  </devices>

</msxconfig>
